@model Avocado.WEB.Models.ViewModels.ProductIndexVM
@if (Model.Products.Count() > 0)
{
	<div>
		<div class="row">
			<div class="col-md-1"></div>
			<div class="col-lg-10 py-3">
				
					<div class="offset-10">
						<a asp-action="Upsert" class="btn btn-outline-success fom-control">Create</a>
					</div>

				<table class="table table-borderless text-center">
					<tr class="text-success">
						<th>#</th>
						<th>Name</th>
						<th>Price</th>
						<th>Category</th>
						<th></th>
					</tr>
					@for (int i = 0; i < Model.Products.Count(); i++)
					{
						<tr>
							<td>@Model.Products[i].Id</td>
							<td>@Model.Products[i].Name</td>
							<td>$@Model.Products[i].Price</td>
							<td>@Model.Products[i].Category.Name</td>
							<td>	
								<a asp-action="Upsert" asp-route-id="@Model.Products[i].Id">
									<button class="btn btn-outline-warning btn-sm" style="display: inline-table">Edit</button>
								</a>
								<button class="btn btn-outline-danger btn-sm" style="display: inline-table">Delete</button>
							</td>
						</tr>
					}

				</table>
				<div pagination="@Model.PaginationModel" clases-enabled="true" page-class="btn border" page-class-normal="btn btn-light"
					 page-class-selected="btn btn-success active" class="btn-group float-end box-shadow mb-5"></div>
			</div>
			@*<div class="col-md-1"></div>*@
		</div>
	</div>

}
else
{
	<p>No products to display</p>
}